<div class="gallery">
    {% for block in section.blocks %}
        {{ block.settings.image }}
    {% endfor %}
</div>



{% schema %} 
    { 
        "name": "Gallery", 
        "settings": [],
        "blocks": [
            {
                "type": "image",
                "name": "Image Block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    }
                ]
            } 
        ]
    } 
{% endschema %}
  